<h1>Find someone's company email</h1>

<div class="row">
	<div class="col-md-4 col-md-offset-4 col-xs-4 col-xs-offset-4">
		<div class="row">
			<div class="col-md-8 col-md-offset-2 col-xs-8 col-xs-offset-2">
				<%= form_for @search do |f| %>
					<%= render 'shared/error_messages', object: f.object %>
					<div class="form-group">
						<%= f.text_field :full_name, class: "form-control", placeholder: "name (e.g. John Doe, John C. Doe)" %>
					</div>
					<div class="form-group">
						<%= f.text_field :domain_name, class: "form-control", placeholder: "domain (e.g. abcd.com)" %>
					</div>
					<div class="submit">
						<%= f.submit "Search", class: "btn btn-primary btn-lg", id: "search_button", data: { disable_with: 'Searching...'} %>
					</div>
				<% end %>
			</div>
		</div>
	</div>
</div>