<h1>Search Result</h1>

<div class="row">
	<div class="col-md-2 col-md-offset-1">
		<div class="search_form">
			<%= form_for @new_search do |f| %>
				<div class="form-group">
					<%= f.label :first_name %>
					<%= f.text_field :first_name, class: "form-control" %>
				</div>
				<div class="form-group">
					<%= f.label :last_name %>
					<%= f.text_field :last_name, class: "form-control" %>
				</div>
				<div class="form-group">
					<%= f.label :domain_name %>
					<%= f.text_field :domain_name, class: "form-control" %>
				</div>
				<div class="submit">
					<%= f.submit "Search", class: "btn btn-primary" %>
				</div>
			<% end %>
		</div>
	</div>
	<div class="col-md-4 col-md-offset-1">
		<table>
			<% if @emails.any? %>
				<% @emails.each do |format, email| %>
					<tr>
						<td class="email">
							<div ><h4><%= email[0] %></h4></div>
						</td>
						<td class="confirmation">
							<% if email[1]/100 == 1 %>
								<span class="glyphicon glyphicon-exclamation-sign"></span>
							<% elsif email[1] == 200 %>
								<span class="glyphicon glyphicon-ok-sign"></span>
							<% elsif email[1] == 207 or email[1] == 215 %>
								<span class="glyphicon glyphicon-question-sign"></span>
							<% elsif email[1]/100 == 4 %>
								<span class="glyphicon glyphicon-remove-sign"></span>
							<% else %>
								<span class="glyphicon glyphicon-ban-circle"></span>
							<% end %>

						</td>
					</tr>
					<% end %>
			<% else %>
				<p>No email format found</p>
			<% end %>
		</table>
	</div>
	<div class="col-md-2 col-md-offset-1">
		<table class="legend">
			<tr class="legend_item">
				<td><span class="glyphicon glyphicon-ok-sign"></span></td>
				<td><strong>Confirmed</strong></td>
			</tr>
			<tr>
				<td><span class="glyphicon glyphicon-question-sign"></span></td>
				<td><strong>Catch All</strong></td>
			</tr>
			<tr>
				<td><span class="glyphicon glyphicon-ban-circle"></span></td>
				<td><strong>Suspect</strong></td>
			</tr>
			<tr>
				<td><span class="glyphicon glyphicon-remove-sign"></span></td>
				<td><strong>Invalid</strong></td>
			</tr>
			<tr>
				<td><span class="glyphicon glyphicon-exclamation-sign"></span></td>
				<td><strong>Internal Error</strong></td>
			</tr>	
		</table>
	</div>
</div>

