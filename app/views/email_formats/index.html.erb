<h1>Email Formats</h1>

<div class="row">
	<div class="col-md-4 col-md-offset-2 col-xs-4 col-xs-offset-2">
		<ul>
			<% @email_formats.each do |email_format| %>
				<div>
					<p><%= email_format.format %></p>
					<%= link_to "Edit", edit_email_format_path(email_format) %> | 
					<%= link_to "Delete", email_format, method: :delete, data: { confirm: "You sure?" } %>
				</div>
			<% end %>
		</ul>

		<p><%= link_to "Add Email Format", new_email_format_path %></p>
	</div>
</div>