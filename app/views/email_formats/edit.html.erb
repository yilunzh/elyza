<h1>Edit Email Format</h1>

<div class="row">
	<div class="col-md-4 col-md-offset-4 col-xs-4 col-xs-offset-4">
		<%= form_for @email_format do |f| %>
			<%= render 'shared/error_messages', object: f.object %>
			<div class="form-group">
				<%= f.label :format %>
				<%= f.text_field :format, class: "form-control" %>
			</div>
			<div class="submit">
				<%= f.submit "Create", class: "btn btn-primary btn-lg" %>
			</div>
		<% end %>
		
		<ul>
			<li>(fn): First Name</li>
			<li>(ln): Last Name</li>
			<li>(fnfl): First Name's First Letter</li>
			<li>(mi): Middle Initial</li>
		</ul>
	</div>
</div>