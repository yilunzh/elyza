<h1>New Domain</h1>

<div class="row">
	<div class="col-md-4 col-md-offset-4">
		<%= form_for @domain do |f| %>
			<%= f.label :name %>
			<%= f.text_field :name, class: "form-control" %>

			<div class="submit">
				<%= f.submit "Create", class: "btn btn-primary btn-lg" %>
			</div>
		<% end %>
	</div>
</div>